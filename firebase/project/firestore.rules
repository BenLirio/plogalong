rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /plogs/{any} {
    	allow read: if request.auth.uid != null && (request.auth.uid == resource.data.UserID || resource.data.Public || resource.data.Public == null)
      allow write: if request.auth.uid == request.resource.data.UserID || request.auth.uid == resource.data.UserID
    }

    match /users/{UserID} {
      allow read, write: if UserID == request.auth.uid
    }
  }
}